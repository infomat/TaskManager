<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_marginBottom="@dimen/list_vertical_margin"
    android:orientation="vertical"
    android:clickable="true"
    android:onClick="onClick">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbIsCompleted"
            android:layout_marginLeft="@dimen/widget_horizontal_margin" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvId"
            android:visibility="invisible" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="14dp"
            android:layout_height="15dp"
            android:id="@+id/btPrority"
            android:background="@android:color/holo_blue_dark"
            android:layout_marginLeft="@dimen/widget_horizontal_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvTodo"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:layout_gravity="left"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tvDateTime"
            android:layout_marginLeft="@dimen/widget_horizontal_margin"
            android:layout_marginRight="@dimen/widget_horizontal_margin" />
    </LinearLayout>
</LinearLayout>