<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edTodo"
        android:layout_centerHorizontal="true"
        android:lines="1"
        android:linksClickable="false"
        android:layout_marginTop="@dimen/widget_vertical_margin"
        android:height="50dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spPriority"
        android:spinnerMode="dropdown"
        android:layout_alignParentStart="true"
        android:layout_below="@id/edTodo"
        android:layout_marginTop="@dimen/widget_vertical_margin"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spDate"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/spPriority"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spTime"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/spDate"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="COMPLETE"
        android:id="@+id/btComplete"
        style="?android:attr/buttonStyleSmall"
        android:layout_below="@+id/spTime"
        android:layout_marginBottom="@dimen/widget_vertical_margin"
        android:layout_marginLeft="@dimen/widget_horizontal_margin"
        android:onClick="onCompleteTask" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/btAdd"
        android:layout_marginRight="@dimen/widget_horizontal_margin"
        style="?android:attr/buttonStyleSmall"
        android:layout_alignTop="@+id/btComplete"
        android:layout_centerHorizontal="true"
        android:layout_alignEnd="@id/spTime"
        android:onClick="onAddTask" />

</RelativeLayout>